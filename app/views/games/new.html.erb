<h1>NEW GAME</h1>
<p>------------------</p>

<div>
  <ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
  </ul>
</div>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="What is the longest word you can think?">
  <input type="hidden" name="grid" value=<%= @letters.join %>>
  <input class='btn' type="submit" value="Submit">
</form>
